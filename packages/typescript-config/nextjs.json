{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,

    "paths": {
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@repo/ui/components/*": ["../../packages/ui/src/components/ui/*"],
      "@repo/ui/lib": ["../../packages/ui/src/components/ui"]
    }
  }
}
